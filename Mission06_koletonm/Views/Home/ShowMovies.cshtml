@{
    ViewData["Title"] = "Show Movies!";
}

@model List<AddMovie>

<!-- 
    A page that visually shows the movies saved to the database    
-->

<table class="table table-bordered table-striped">
    <thead class="font-weight-bold thead-dark">
        <tr>
            <td>Category</td>
            <td>Title</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Edited</td>
            <td>Lent to</td>
            <td>Notes</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.MovieCategory.CategoryName</td>
                <td>@x.Title</td>
                <td>@x.Year</td>
                <td>@x.Director</td>
                <td>@x.Rating</td>
                <td>@x.Edited</td>
                <td>@x.LentTo</td>
                <td>@x.Notes</td>
            </tr>
        }
    </tbody>
</table>
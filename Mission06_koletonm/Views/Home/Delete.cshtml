@{
    ViewData["Title"] = "Delete Movie";
}

@model AddMovie

<h2>Confirm the Deletion</h2>

<br />
<br />
<h3>Are you sure you want to delete the movie @Model.Title?</h3>

<form method="post" asp-controller="Home" asp-action="Delete">
    <button type="submit" class="btn btn-outline-danger">Delete</button> &nbsp;
    <a asp-controller="Home" asp-action="ShowMovies" class="btn btn-primary">Cancel</a>

    <input type="hidden" asp-for="MovieId"/>
</form>